#!/usr/bin/env bash
set -eo pipefail

npm install -g less@~3 node-sass@4.11.0 postcss-cli@5.0.1 autoprefixer@8.6.4 browserify@16.2.3 babelify@8.0.0 envify@4.1.0 babel-preset-es2015

echo "-----> Installing all deps"
npm install

ln -s -f ../../vendor/node/bin/lessc .heroku/python/bin/lessc
ln -s -f ../../vendor/node/bin/autoprefixer .heroku/python/bin/autoprefixer
ln -s -f ../../vendor/node/bin/browserify .heroku/python/bin/browserify
ln -s -f ../../vendor/node/bin/node-sass .heroku/python/bin/node-sass
ln -s -f ../../vendor/node/bin/postcss .heroku/python/bin/postcss
ln -s -f ../../vendor/node/bin/envify .heroku/python/bin/envify

ln -s ../../vendor/node/lib/node_modules .heroku/python/lib/node_modules
ln -s ../../vendor/node/lib/node_modules ./node_modules

echo
